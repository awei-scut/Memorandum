<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.weizewei.memorandum.MainActivity">
 <com.example.weizewei.memorandum.NewCalender
     android:id="@+id/newCalendar"
    android:layout_width="match_parent"
    android:layout_height="252dp"
    />
 <LinearLayout
     android:background="@color/pointColor"
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <TextView
      android:textSize="18dp"
      android:text="当前日期:"
      android:gravity="center"
      android:layout_width="80dp"
      android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/curday"
      android:gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="match_parent" />
 </LinearLayout>
 <FrameLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
  <android.support.design.widget.FloatingActionButton
      android:id="@+id/add"
      android:src="@mipmap/add_back"
      android:backgroundTint="#ffffff"
      android:layout_margin="8dp"
      android:layout_gravity="bottom|right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <ListView
      android:id="@+id/schedule_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />
  <TextView
      android:id="@+id/nullSchedule"
      android:layout_gravity="center"
      android:text="暂无行程"
      android:visibility="gone"
      android:textSize="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
 </FrameLayout>
</LinearLayout>
